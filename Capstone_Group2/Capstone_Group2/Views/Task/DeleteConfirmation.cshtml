@model TimetableTask

@{
    ViewData["Title"] = "Delete Task Confirmation";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<div class="confirmation-container">
    <h1>@ViewData["Title"]</h1>

    <p>Are you sure you want to delete the following task?</p>
    <p><strong>@Model.TaskName</strong> (Due Date: @Model.End_Date.ToString())</p>

    <form asp-controller="Task" asp-action="ProcessDeleteRequestById" asp-route-id="@Model.TaskId" class="button-form" method="post" enctype="application/x-www-form-urlencoded">
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Confirm Deletion</button>
        <a asp-controller="Task" asp-action="GetAllTasks" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
    </form>
</div>